# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Scraping Configuration
REQUEST_TIMEOUT=60
REQUEST_DELAY=5
MAX_RETRIES=5
USE_SELENIUM=true

# Cache Configuration
USE_CACHE=true
CACHE_TTL_HOURS=2

# Proxy Configuration
USE_PROXIES=true
PROXY_FILE=scrapers/proxy_list.txt

# Logging
LOG_LEVEL=INFO

# URLs to scrape
REVOLICO_URL=https://www.revolico.com/empleos
CUBISIMA_MARKETING_URL=https://www.cubisima.com/empleos/ofertas/marketing?categoriaestricta
CUBISIMA_DESIGN_URL=https://www.cubisima.com/empleos/ofertas/diseno?categoriaestricta
CUBISIMA_IT_URL=https://www.cubisima.com/empleos/ofertas/informatica-Cibernetica?categoriaestricta
CUCODERS_URL=https://cucoders.dev/empleos/

# Filter Keywords (comma-separated)
FILTER_KEYWORDS=inteligencia artificial,ia,ai,machine learning,ml,deep learning,diseño,design,designer,redacción,redactor,writer,content,contenido,automatización,automation,rpa,bot

# NOTAS DE CONFIGURACIÓN:
# - USE_SELENIUM=true para Revolico (usará undetected-chromedriver)
# - USE_PROXIES=true para rotar IPs automáticamente
# - USE_CACHE=true para evitar requests redundantes
# - REQUEST_DELAY aumentado a 5-10 segundos para más seguridad
# - MAX_RETRIES aumentado a 5 para más reintentos
